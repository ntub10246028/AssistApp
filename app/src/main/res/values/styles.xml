<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- colorPrimary is used for default action bar background -->
        <item name="android:colorPrimary">@color/colorPrimary_blue</item>
        <!-- colorPrimary is used for default the status bar -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_blue</item>
        <item name="android:colorAccent">@color/colorAccent_blue</item>
    </style>

    <style name="Widget.Assist.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>