<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_newmission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_articletitle" />

        <EditText
            android:id="@+id/et_newmission_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:hint="@string/text_articlecontent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_newmission_camera"
            android:layout_width="@dimen/new_mission_funtion_side"
            android:layout_height="@dimen/new_mission_funtion_side"
            android:layout_weight="1"
            android:src="@drawable/is_camera" />

        <ImageView
            android:id="@+id/iv_newmission_map"
            android:layout_width="@dimen/new_mission_funtion_side"
            android:layout_height="@dimen/new_mission_funtion_side"
            android:layout_weight="1"
            android:src="@drawable/is_map" />

        <ImageView
            android:id="@+id/iv_newmission_time"
            android:layout_width="@dimen/new_mission_funtion_side"
            android:layout_height="@dimen/new_mission_funtion_side"
            android:layout_weight="1"
            android:src="@drawable/ic_apple" />

        <ImageView
            android:id="@+id/iv_newmission_send"
            android:layout_width="@dimen/new_mission_funtion_side"
            android:layout_height="@dimen/new_mission_funtion_side"
            android:layout_weight="1"
            android:src="@drawable/is_send" />

    </LinearLayout>
</LinearLayout>