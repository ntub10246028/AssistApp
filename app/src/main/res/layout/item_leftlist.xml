<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tv_item_leftlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_leftlist_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Large Text"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_item_leftlist_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/m_history_completed" />

    <TextView
        android:id="@+id/tv_item_leftlist_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_item_leftlist_status"
        android:text="Large Text"
        android:textColor="@color/black"
        android:textSize="16sp" />
</RelativeLayout>