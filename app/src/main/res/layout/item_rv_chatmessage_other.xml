<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_chat">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/bg_chat_other"
        app:cardCornerRadius="10dp"
        android:id="@+id/view2">

        <TextView
            android:id="@+id/tv_item_chat_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Content"
            android:maxEms="14"
            android:textColor="@color/text_chat_other" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="早上10:00"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_item_chat_other_time"
        android:layout_alignBottom="@+id/view2"
        android:layout_toEndOf="@+id/view2" />
</RelativeLayout>